{{#if isAnswering}}
  <form>
    <h3>{{model.author}} desperately wants your answer!!!</h3>
    <div class="form-group">
      <label for="author">Author</label>
      {{input class="form-control" value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="body">Answer...</label>
      {{textarea rows="5" cols="100" class="form-control" value=body id="body"}}
    </div>
    <button type="button" class="btn btn-success" {{action 'saveAnswer' model}}>Submit your answer</button>
    <button type="button" class="btn btn-default" {{action 'hideAnswerForm'}}>Don't Answer</button>
  </form>
{{else}}
  <div class="centered">
    <button type="button" class="btn btn-warning" {{action 'showAnswerForm'}}><h2>Add Your Own Answer!</h2></button>
  </div>
{{/if}}
